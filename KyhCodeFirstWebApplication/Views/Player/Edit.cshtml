@model KyhCodeFirstWebApplication.ViewModels.PlayerEditViewModel

@{
    ViewData["Title"] = "Edit player";
}
<div class="card">
    <div class="card-header">
        <h1>Edit player</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Namn</label>
                <input class="form-control" asp-for="Name" />  
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="JerseyNumber">Tröjnummer</label>
                <input class="form-control" asp-for="JerseyNumber" />
                <span asp-validation-for="JerseyNumber" class="field-validation-error"></span>
            </div>

            <button type="submit" class="btn">Save</button>

        </form>

    </div>
</div>